<% provide(:title, @user.email) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @user.email %>
      </h1>
      <div>
        <%= image_tag "#{@user.image_url}" %>
      </div>
    </section>
    <section>
      <%= render 'users/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'users/follow_form' %>
  </div>
</div>
