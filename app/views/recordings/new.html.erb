<div style="float:right;" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
<%= form_for @recording do |f| %>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :provider %><br />
    <%= f.collection_select(:provider_id, @providers, :id, :name, :include_blank => "Please select") %>
  </div>
  <div class="field">
    <%= f.label :topic %><br />
    <%= f.collection_select(:topic_id, @topics, :id, :name, :include_blank => "Please select") %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>
