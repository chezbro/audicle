<div style="float:right;" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
<%= form_for @recording, class:"recording_new", :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :key %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :provider %><br />
    <%= f.collection_select(:provider_id, @providers, :id, :name, :include_blank => "Please select") %>
  </div>
  <div class="field">
    <%= f.label :topic %><br />
    <%= f.collection_select(:topic_id, @topics, :id, :name, :include_blank => "Please select") %>
  </div>
<!--   <div class="field">
    <#%= f.label :audio %>
    <#%= f.file_field :audio %>
  </div> -->
  <div class="field">
<%= s3_uploader_form post: recordings_url, as: "recording[audio_url]" do %>
  <%= file_field_tag :file, multiple: true %>
<% end %>
    <%= f.submit "Create Recording" %>
  <% end %>
  </div>

<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%"></div></div>
</div>
</script>
</div>


