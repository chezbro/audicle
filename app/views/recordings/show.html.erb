<div style="float:right;top:40px" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
    <div style="text-align:center;" class="col-lg-12">
        <h1 class="audicle_title" style="margin-bottom:5px"><%= link_to "#{@recording.title}", @recording.url, target:"_blank"%></h1>
<!--         <div style="max-width:350px;margin:0 auto 10px auto" class="pin">
            <#%= image_tag "#{@recording.image}" %>
        </div> -->
        <ul class="article_information">
            <li><%= @recording.author %></li>
            <!-- <li>Added By: <#%= @recording.user.email %></li> -->
            <li><%= link_to "#{@recording.topic.name}", topic_path(@recording.topic.id) %></li>
            <li><%= link_to "#{@recording.provider.name}", provider_path(@recording.provider.id) %></li><br>
        </ul>
            <p style="display: inherit; margin: 10px auto;"><%= audio_tag(download_url_for(@amazon_recordings.key), controls:true) %></p>
    </div>
</div>
<div style="float:right;top:40px" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
    <% @users.each do |user|  %>
    <div style="display:inline-block;margin-right:0px;max-width:150px;" class="pin">
        <h5 style="text-align:center"><%= user.name[0,16] %></h5>
        <% if user.image_url.present? %>
            <%= link_to image_tag("#{user.image_url}"), user_path(user.id) %>
        <% else %>
            <%= link_to image_tag("https://s3.amazonaws.com/uifaces/faces/twitter/_everaldo/128.jpg") %>
        <% end %>
        <p style="font-size:10px;text-align:center">17 Audicles | 9 Thanks </p><br>
    </div>
    <% end %>
</div>
