<div style="float:right;top:40px" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
    <div style="text-align:center;" class="col-lg-12">
        <h1 class="audicle_title" style="margin-bottom:5px"><%= link_to "#{@same_recording_url.title}", @same_recording_url.url, target:"_blank"%></h1>
<!--         <div style="max-width:350px;margin:0 auto 10px auto" class="pin">
            <#%= image_tag "#{@recording.image}" %>
        </div> -->
        <ul class="article_information">
            <li><%= @same_recording_url.author %></li>
            <!-- <li>Added By: <#%= @same_recording_url.user.email %></li> -->
            <li><%= link_to "#{@same_recording_url.topic.name}", topic_path(@same_recording_url.topic.id) %></li>
            <li><%= link_to "#{@same_recording_url.provider.name}", provider_path(@same_recording_url.provider.id) %></li><br>
        </ul>
            <% if @amazon_recording  %>
                <p style="display: inherit; margin: 10px auto;"><%= audio_tag(download_url_for(@amazon_recording.key), controls:true) %></p>
            <% end %>
    </div>
</div>
<div style="float:right;top:40px" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
    <% @same_recording_users.each do |recording|  %>
    <div style="display:inline-block;margin-right:0px;max-width:150px;" class="pin">
        <h5 style="text-align:center"><%= link_to "#{recording.user.name[0,16]}", user_path(recording.user.id), style:"text-decoration:none" %></h5>
        <% if recording.user.image_url.present? %>
            <%= link_to image_tag("#{recording.user.image_url}"), user_path(recording.user.id) %>
        <% else %>
            <%= link_to image_tag("https://s3.amazonaws.com/uifaces/faces/twitter/_everaldo/128.jpg"), user_path(recording.user.id) %>
        <% end %>
        <p style="font-size:10px;text-align:center"><%= link_to "#{recording.user.recordings.count} Audicles", user_path(recording.user.id) %> | <%= recording.user.followers.count %> Listeners </p><br>
    </div>
    <% end %>
</div>

