<%= render "layouts/sidebar" %>
        <div style="float:right;top:40px;" class="row-fluid col-xs-12 col-sm-8 col-md-10 col-lg-10">
            <div id="columns">
                <% @feed_items.each do |feed_item| %>
                    <div class="pin">
                        <h1><%= link_to "#{feed_item.title}", recording_path(feed_item.id), style:"" %></h1>
                        <%= link_to image_tag("#{feed_item.image}"), recording_path(feed_item.id) %>
                        <p style="font-size:12px;text-align:center"><%= link_to "#{feed_item.provider.name}", provider_path(feed_item.provider.id) %></p>
                        <p style="font-size:12px;text-align:center"><%= feed_item.author %></p>
                        <p><%= link_to like_recording_path(feed_item.id), method: :put, remote:true do %>
                            <i class="fa fa-indent"></i>
                            <% end %>
                        </p>
                    </div>
                <% end %>
             </div>
        </div>
    </div>
</div>
